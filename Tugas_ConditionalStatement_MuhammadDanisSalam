        "\n",
        "# Menentukan tarif berdasarkan waktu parkir\n",
        "if jam <= 1:\n",
        "    print(\"Tarif Rp 5.000\")  # Untuk 1 jam pertama\n",
        "elif jam <= 5:\n",
        "    print(\"Tarif Rp 10.000\")  # Untuk 2-5 jam\n",
        "else:\n",
        "    print(\"Tarif Rp 20.000\")  # Untuk lebih dari 5 jam\n"
