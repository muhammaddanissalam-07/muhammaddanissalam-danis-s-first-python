        "\n",
        "# Meminta input bilangan dari pengguna dan mengubahnya menjadi integer\n",
        "bilangan = float(input(\"Masukkan bilangan: \"))\n",
        "\n",
        "# Mengecek apakah bilangan habis dibagi 2\n",
        "if bilangan % 2 == 0:\n",
        "    print(\"Genap\")  # Jika sisa bagi 2 = 0, maka bilangan genap\n",
        "else:\n",
        "    print(\"Ganjil\")  # Jika tidak, berarti bilangan ganjil\n"
