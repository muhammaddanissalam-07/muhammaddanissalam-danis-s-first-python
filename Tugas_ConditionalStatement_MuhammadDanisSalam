    {
      "cell_type": "code",
      "source": [
        "# Program menentukan apakah huruf termasuk vokal atau konsonan\n",
        "\n",
        "huruf = input(\"Masukkan huruf: \").lower()  # Input huruf dan ubah jadi huruf kecil\n",
        "\n",
        "# Mengecek apakah huruf termasuk dalam daftar huruf vokal\n",
        "if huruf in [\"a\", \"i\", \"u\", \"e\", \"o\"]:\n",
        "    print(\"Huruf Vokal\")\n",
        "else:\n",
        "    print(\"Huruf Konsonan\")"
